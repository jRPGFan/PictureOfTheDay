<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@layout/main_fragment"
        motion:constraintSetStart="@layout/fragment_main_start"
        motion:duration="1000">

<!--        <OnClick motion:targetId="@id/wiki_button" />-->
        <OnSwipe
            motion:touchAnchorId="@id/wiki_button"
            motion:touchAnchorSide="top"
            motion:dragDirection="dragLeft"/>
    </Transition>

    <Transition
        motion:constraintSetEnd="@layout/fragment_main_start"
        motion:constraintSetStart="@layout/main_fragment"
        motion:duration="1000">

        <OnSwipe
            motion:touchAnchorId="@id/wiki_button"
            motion:touchAnchorSide="top"
            motion:dragDirection="dragRight"/>
    </Transition>
</MotionScene>
